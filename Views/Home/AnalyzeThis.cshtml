@model StringAnalyzer.Models.StringStatistics
@using StringAnalyzer.Services



<div>
    <h4>Results</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
        <dl class="row">
        <dt class = "col-sm-2">
            <p>Longest word(s)</p>
        </dt>
        <dd class = "col-sm-10">
             @CustomizeArray.ArrayListToString(@Model.LongestWords())
        </dd>
    </dl
      </dl>
        <dl class="row">
        <dt class = "col-sm-2">
            <p>Sorted</p>
        </dt>
        <dd class = "col-sm-10">
             @CustomizeArray.ArrayToString(@Model.Alpabetize())
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Number of words</p>
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfWords()
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Number of rows</p>
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfRows()
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Number of sentences</p>
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfSentences()
        </dd>
    </dl>
 

</div>
