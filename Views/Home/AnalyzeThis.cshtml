@model StringAnalyzer.Models.StringStatistics
@using StringAnalyzer.Services



<div>
    <h4>Results</h4>
    <!--qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq-->
    @Model.Ladeni()
     <!--qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq-->

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
     <dl class="row">
        <dt class = "col-sm-2">
            Number of sentences
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfSentences()
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            Number of rows
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfRows()
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            Number of words
        </dt>
        <dd class = "col-sm-10">
            @Model.NumberOfWords()
        </dd>
    </dl>
    <dl class="row">
        <dt class = "col-sm-2">
            Sorted words
        </dt>
        <dd class = "col-sm-10">
             @CustomizeArray.ArrayToString(@Model.Alpabetize())
        </dd>
    </dl>
         <dl class="row">
        <dt class = "col-sm-2">
            Longest word(s)
        </dt>
        <dd class = "col-sm-10">
             @CustomizeArray.ArrayListToString(@Model.LongestWords())
        </dd>
        </dl>
     <dl class="row">
        <dt class = "col-sm-2">
            Shortest word(s)
        </dt>
        <dd class = "col-sm-10">
            @CustomizeArray.ArrayListToString(@Model.ShortestWords())
        </dd>
    </dl>
    
        <dl class="row">
        <dt class = "col-sm-2">
            Avarage word length
        </dt>
        <dd class = "col-sm-10">
             @Math.Round(@Model.AvarageWordLength(), 2) letters
        </dd>
    </dl>
        <dl class="row">
        <dt class = "col-sm-2">
            Most frequent word(s) 
        </dt>
        <dd class = "col-sm-10">
            @CustomizeArray.ArrayListToString(@Model.MostCommonWords())
        </dd>
    </dl>
    
          <dl class="row">
        <dt class = "col-sm-2">
            Most frequent letter(s)
        </dt>
        <dd class = "col-sm-10">
             @CustomizeArray.ArrayListToString(@Model.MostCommonLetter())  
             &#9 &#9 &#9
             (@Math.Round(@Model.LetterPercents(@Model.WordsByLetters().Values.Max(),@Model.WordsByLetters()), 2) %)
           
             
        </dd>
        </dl>


 

 <!-- prumern8 delka vet-->

</div>
